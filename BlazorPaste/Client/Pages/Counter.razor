@page "/counter"

<PageTitle>Counter</PageTitle>

<MudText Typo="Typo.h2">Current Count: @currentCount</MudText>
<MudDivider />
<MudFab Class="ma-3" StartIcon="@Icons.Material.Filled.ArrowCircleUp" Label="Click Me" OnClick="IncrementCount" />
<MudFab Class="ma-3" StartIcon="@Icons.Material.Filled.Clear" Label="Reset" OnClick="ResetCount" />

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    private void ResetCount()
    {
        currentCount = 0;
    }
}
