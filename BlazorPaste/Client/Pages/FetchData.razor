@page "/fetchdata"
@using Microsoft.AspNetCore.Authorization
@using Microsoft.AspNetCore.Components.WebAssembly.Authentication
@using BlazorPaste.Shared
@attribute [Authorize]
@inject HttpClient Http

<PageTitle>Weather forecast</PageTitle>

<MudPaper Class="pa-16 ma-2" Elevation="3">
    <MudTable Items="@pastes.Take(4)" Hover="true" Breakpoint="Breakpoint.Sm" Loading="@_loading" LoadingProgressColor="Color.Info">
        <HeaderContent>
            <MudTh>ID</MudTh>
            <MudTh>Body</MudTh>
            <MudTh>Language</MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="ID">@context.ID</MudTd>
            <MudTd DataLabel="Body">@context.Body</MudTd>
            <MudTd DataLabel="Language">@context.Language</MudTd>
        </RowTemplate>
    </MudTable>
</MudPaper>

@code {
    private IEnumerable<UserPasteItem> pastes = new List<UserPasteItem>();
    private bool _loading;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _loading = true;
            pastes = await Http.GetFromJsonAsync<List<UserPasteItem>>("api/pastes");
            _loading = false;
        }
        catch (AccessTokenNotAvailableException exception)
        {
            exception.Redirect();
        }
    }
}
